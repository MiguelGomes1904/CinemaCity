{{< layout}}
{{$main}}

<section class="products-hero" style="background-color: {{hero.background}};">
  <img src="{{hero.image}}" alt="{{hero.imageAlt}}" class="hero-banner-img">
</section>

<section class="products-intro">
  <div class="products-intro-container">
    <div class="products-intro-text">
      <h2>{{intro.title}}</h2>
      <p>{{intro.body}}</p>
      <a class="btn" href="{{intro.cta.href}}">{{intro.cta.label}}</a>
    </div>
    <div class="products-intro-image">
      <img src="/assets/images/gallery/PIOC.png" alt="Pipocas">
    </div>
  </div>
</section>

<section class="footer-banner" style="background-image: url('http://localhost/cinemacity/assets/images/gallery/faixa.jpg'); background-size: cover; background-position: center;">
</section>

<section id="food" class="food-strip">
  <div class="food-strip-inner">
    {{#foodStrip}}
    {{#@index}}
    <div class="food-card" style="background-color: {{background}};">
      <img src="{{image}}" alt="{{alt}}">
    </div>
    {{/@index}}
    {{/foodStrip}}
  </div>
</section>

<section class="promo-banners">
  <div class="banners-grid">
    {{#products}}
    {{#featured}}
    <div class="promo-banner" style="background-color: {{color}};">
      <div class="banner-content">
        <p class="banner-kicker">{{name}}</p>
        <h3 class="banner-title">{{name}}</h3>
        <p class="banner-subtitle">{{details}}</p>
        <div class="banner-price">{{price}}</div>
      </div>
      <div class="banner-image">
        <img src="{{image}}" alt="{{name}}">
      </div>
    </div>
    {{/featured}}
    {{/products}}
  </div>
</section>

<section class="food-banner" style="background-image: url('/assets/images/gallery/promo.jpg'); background-size: cover; background-position: center;">
</section>

{{/main}}
{{/layout}}

<footer class="mini-footer" style="background-image: url('/assets/images/gallery/banner.jpg'); background-size: cover; background-position: center; background-attachment: fixed;">
  <div class="mini-footer-overlay">
    <a href="{{miniFooter.href}}">{{miniFooter.label}}</a>
  </div>
</footer>
