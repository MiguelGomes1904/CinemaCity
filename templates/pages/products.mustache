{{< layout}}
{{$main}}

<section class="products-hero" style="background-color: {{hero.background}};">
  <div class="container hero-grid">
    <div class="hero-copy">
      <p class="hero-kicker">{{hero.kicker}}</p>
      <h1>{{hero.title}}</h1>
      <p class="hero-subtitle">{{hero.subtitle}}</p>
      <a class="btn btn-primary hero-btn" href="{{hero.cta.href}}">{{hero.cta.label}}</a>
    </div>
    <div class="hero-figure">
      <img src="{{hero.image}}" alt="{{hero.imageAlt}}">
      <div class="hero-price">{{hero.price}}</div>
    </div>
  </div>
</section>

<section class="products-intro container">
  <h2>{{intro.title}}</h2>
  <p>{{intro.body}}</p>
  <a class="btn btn-outline-primary" href="{{intro.cta.href}}">{{intro.cta.label}}</a>
</section>

<section id="food" class="food-strip">
  <div class="food-strip-inner container">
    {{#foodStrip}}
    <div class="food-card" style="background-color: {{background}};">
      <img src="{{image}}" alt="{{alt}}">
    </div>
    {{/foodStrip}}
  </div>
</section>

<section class="promo-banners container">
  <div class="banners-grid">
    {{#banners}}
    <div class="promo-banner" style="background-color: {{background}};">
      <div class="banner-content">
        <p class="banner-kicker">{{kicker}}</p>
        <h3 class="banner-title">{{title}}</h3>
        <p class="banner-subtitle">{{subtitle}}</p>
        <div class="banner-price">{{price}}</div>
      </div>
      <div class="banner-image">
        <img src="{{image}}" alt="{{title}}">
      </div>
    </div>
    {{/banners}}
  </div>
</section>

<section class="products-mini-footer">
  <a href="{{miniFooter.href}}">{{miniFooter.label}}</a>
</section>

{{/main}}
{{/layout}}
