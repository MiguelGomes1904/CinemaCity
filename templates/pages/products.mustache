{{< layout}}
{{$main}}

<section class="products-hero" style="background-color: {{hero.background}};">
  <img src="{{hero.image}}" alt="{{hero.imageAlt}}" class="hero-banner-img">
</section>

<section class="products-intro">
  <div class="products-intro-container">
    <div class="products-intro-text">
      <h2>{{intro.title}}</h2>
      <p>{{intro.body}}</p>
      <button type="button" class="btn" onclick="openProductDrawer(); return false;">{{intro.cta.label}}</button>
    </div>
    <div class="products-intro-image">
      <img src="assets/images/gallery/PIOC.png" alt="Pipocas">
    </div>
  </div>
</section>

<section class="footer-banner" style="background-image: url('assets/images/gallery/faixa.jpg'); background-size: cover; background-position: center;">
</section>

<section id="food" class="food-strip">
  <div class="food-strip-inner">
    {{#foodStrip}}
    {{#@index}}
    <div class="food-card" style="background-color: {{background}};">
      <img src="{{image}}" alt="{{alt}}">
    </div>
    {{/@index}}
    {{/foodStrip}}
  </div>
</section>

<section class="promo-banners">
  <div class="banners-grid">
    {{#products}}
    {{#featured}}
    <div class="promo-banner" style="background-color: {{color}};">
      <div class="banner-content">
        <p class="banner-kicker">{{name}}</p>
        <h3 class="banner-title">{{name}}</h3>
        <p class="banner-subtitle">{{details}}</p>
        <div class="banner-price">{{price}}</div>
        <button style="margin-top:10px; padding:10px 14px; background:#0a2e63; color:#fff; border:none; border-radius:10px; font-weight:700; cursor:pointer;" onclick="addPack('{{name}}')">Adicionar pack</button>
      </div>
      <div class="banner-image">
        <img src="{{image}}" alt="{{name}}">
      </div>
    </div>
    {{/featured}}
    {{/products}}
  </div>
</section>

<section class="produtos-lista">
    <div style="max-width: 1200px; margin: 0 auto; padding: 40px 20px;">
        <h2 style="text-align: center; margin-bottom: 40px; font-size: 2rem;">Todos os Produtos</h2>
        <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(180px, 1fr)); gap: 20px;">
            {{#products}}
            <div style="width:100%; background: rgb(247, 247, 247); border-radius: 12px; padding: 12px; box-shadow: rgba(0, 0, 0, 0.08) 0px 10px 18px; display: flex; flex-direction: column; gap: 6px;">
                <div style="width:100%; height:120px; background:#fff; border-radius:10px; display:flex; align-items:center; justify-content:center; overflow:hidden;">
                    <img src="{{image}}" alt="{{name}}" style="max-width:100%; max-height:100%; object-fit:contain;">
                </div>
                <div style="background: #0a2e63; color: white; padding: 4px 8px; border-radius: 6px; font-size: 0.8rem; font-weight: 700;">{{categoria}}</div>
                <div style="font-weight:700; color:#0a2e63; font-size:0.95rem; min-height:38px;">{{name}}</div>
                <div style="color:#333; font-size:0.9rem;">{{price}}</div>
            </div>
            {{/products}}
        </div>
    </div>
</section>

<section class="food-banner" style="background-image: url('/assets/images/gallery/promo.jpg'); background-size: cover; background-position: center;">
</section>

<!-- Overlay shared by both drawers -->
<div id="drawerOverlay" style="display: none; position: fixed; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0, 0, 0, 0.55); z-index: 9998;" onclick="closeAllDrawers()"></div>

<!-- Drawer 1: Seleção de localização -->
<div id="productDrawer" style="display: none; position: fixed; right: 0; top: 0; width: 100%; max-width: 500px; height: 100vh; background: linear-gradient(135deg, #0f2847 0%, #1a3a52 100%); z-index: 9999; overflow-y: auto; box-shadow: -8px 0 30px rgba(0, 0, 0, 0.5);">
  <div style="position: relative; width: 100%; height: 100%; display: flex; flex-direction: column; padding: 40px 30px;">
    <button onclick="closeAllDrawers()" style="position: absolute; top: 20px; left: 20px; background: none; border: none; color: #fff; cursor: pointer; padding: 10px; font-size: 24px; width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
      ✕
    </button>
        
    <div style="margin-top: 30px; margin-bottom: 50px;">
      <h2 style="font-size: 2rem; font-weight: 900; color: #fff; line-height: 1.3; margin: 0; text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);">Em que Cinema City pretende levantar os teus artigos de Bar?</h2>
    </div>
        
    <div style="display: flex; flex-direction: column; gap: 20px; flex: 1;">
      <button onclick="selectLocation('alfragide')" style="padding: 18px 25px; background: rgba(255, 255, 255, 0.05); border: 2px solid rgba(255, 255, 255, 0.15); border-radius: 8px; color: #fff; cursor: pointer; font-size: 1.2rem; font-weight: 600; display: flex; justify-content: space-between; align-items: center; transition: all 0.3s ease;">
        <span>Alfragide</span>
        <span>→</span>
      </button>
      <button onclick="selectLocation('alvalade')" style="padding: 18px 25px; background: rgba(255, 255, 255, 0.05); border: 2px solid rgba(255, 255, 255, 0.15); border-radius: 8px; color: #fff; cursor: pointer; font-size: 1.2rem; font-weight: 600; display: flex; justify-content: space-between; align-items: center; transition: all 0.3s ease;">
        <span>Alvalade</span>
        <span>→</span>
      </button>
      <button onclick="selectLocation('campo-pequeno')" style="padding: 18px 25px; background: rgba(255, 255, 255, 0.05); border: 2px solid rgba(255, 255, 255, 0.15); border-radius: 8px; color: #fff; cursor: pointer; font-size: 1.2rem; font-weight: 600; display: flex; justify-content: space-between; align-items: center; transition: all 0.3s ease;">
        <span>Campo Pequeno</span>
        <span>→</span>
      </button>
      <button onclick="selectLocation('leiria')" style="padding: 18px 25px; background: rgba(255, 255, 255, 0.05); border: 2px solid rgba(255, 255, 255, 0.15); border-radius: 8px; color: #fff; cursor: pointer; font-size: 1.2rem; font-weight: 600; display: flex; justify-content: space-between; align-items: center; transition: all 0.3s ease;">
        <span>Leiria</span>
        <span>→</span>
      </button>
      <button onclick="selectLocation('setubal')" style="padding: 18px 25px; background: rgba(255, 255, 255, 0.05); border: 2px solid rgba(255, 255, 255, 0.15); border-radius: 8px; color: #fff; cursor: pointer; font-size: 1.2rem; font-weight: 600; display: flex; justify-content: space-between; align-items: center; transition: all 0.3s ease;">
        <span>Setúbal</span>
        <span>→</span>
      </button>
    </div>
  </div>
</div>

<!-- Drawer 2: Bar items -->
<div id="barDrawer" style="display: none; position: fixed; inset: 0; z-index: 9999; background: radial-gradient(circle at 30% 40%, #113e85 0%, #062b5a 45%, #031c3a 100%);">
  <div style="position: relative; height: 100%; max-width: 1100px; margin: 0 auto; display: flex; gap: 24px; padding: 32px 24px; box-sizing: border-box; align-items: stretch;">
    <button onclick="closeAllDrawers()" style="position: absolute; top: 18px; right: 22px; background: #c21633; color: #fff; border: none; width: 42px; height: 42px; border-radius: 50%; font-size: 22px; font-weight: 700; cursor: pointer; box-shadow: 0 6px 14px rgba(0,0,0,0.35);">✕</button>

    <div style="flex: 0 0 36%; background: linear-gradient(180deg, rgba(255,255,255,0.05) 0%, rgba(255,255,255,0.02) 100%); border-radius: 14px; padding: 30px 26px; color: #fff; display: flex; flex-direction: column; gap: 12px; box-shadow: 0 14px 24px rgba(0,0,0,0.35);">
      <img src="/assets/images/gallery/logo.png" alt="Cinema City" style="width: 120px; height: auto; margin-bottom: 10px;">
      <h2 id="bar-location-name" style="font-size: 1.6rem; font-weight: 800; margin: 0;">Cinema City</h2>
      <p id="bar-location-address" style="margin: 0; line-height: 1.5; opacity: 0.9;">Escolhe a tua localização para ver os artigos disponíveis.</p>
      <div id="bar-location-extra" style="margin-top: 8px; font-weight: 600; opacity: 0.9;"></div>
    </div>

    <div style="flex: 1; background: #e3e3e3; border-radius: 14px; padding: 26px; box-shadow: 0 18px 30px rgba(0,0,0,0.25); display: flex; flex-direction: column; gap: 22px; overflow-y: auto;">
      <div>
        <p style="margin: 0; color: #0a2e63; font-weight: 700;">Escolhe os artigos de bar</p>
        <hr style="border: none; border-top: 1px solid rgba(0,0,0,0.08); margin: 10px 0 12px;">
      </div>

      <div id="bar-products-container"></div>

      <div style="background: #f7f7f7; border-radius: 12px; padding: 14px 16px; box-shadow: 0 10px 18px rgba(0,0,0,0.12);">
        <p style="margin: 0 0 8px; color: #0a2e63; font-weight: 700;">Carrinho</p>
        <div id="cart-items" style="display: flex; flex-direction: column; gap: 6px; min-height: 32px; font-size: 0.95rem; color: #0a2e63;"></div>
        <div style="display: flex; justify-content: space-between; align-items: center; margin-top: 8px; font-weight: 800; color: #0a2e63;">
          <span>Total</span>
          <span id="cart-total">0,00€</span>
        </div>
        <div id="cart-message" style="margin-top: 8px; font-size: 0.9rem; min-height: 20px;"></div>
      </div>

      <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(220px, 1fr)); gap: 12px; background: #f7f7f7; border-radius: 12px; padding: 14px 16px; box-shadow: 0 10px 18px rgba(0,0,0,0.12);">
        <div style="display: flex; flex-direction: column; gap: 6px;">
          <label for="order-name" style="font-weight: 700; color: #0a2e63;">Nome</label>
          <input id="order-name" type="text" placeholder="O teu nome" style="padding: 10px; border-radius: 8px; border: 1px solid #ccc;">
          <label for="order-email" style="font-weight: 700; color: #0a2e63;">Email</label>
          <input id="order-email" type="email" placeholder="email@dominio.com" style="padding: 10px; border-radius: 8px; border: 1px solid #ccc;">
          <label for="order-phone" style="font-weight: 700; color: #0a2e63;">Telemóvel</label>
          <input id="order-phone" type="tel" placeholder="Opcional" style="padding: 10px; border-radius: 8px; border: 1px solid #ccc;">
        </div>
        <div style="display: flex; flex-direction: column; gap: 6px;">
          <label for="order-payment" style="font-weight: 700; color: #0a2e63;">Pagamento</label>
          <select id="order-payment" style="padding: 10px; border-radius: 8px; border: 1px solid #ccc;">
            <option value="">Seleciona</option>
            <option value="mbway">MB Way</option>
            <option value="multibanco">Multibanco</option>
            <option value="visa">Visa</option>
            <option value="paypal">PayPal</option>
          </select>
          <div style="font-size: 0.9rem; color: #0a2e63; opacity: 0.8;">Pagamento e levantamento no cinema escolhido.</div>
        </div>
      </div>

      <button id="checkout-products" style="padding: 14px; background: linear-gradient(135deg, #f6a821 0%, #ffb703 100%); color: #0a2e63; border: none; border-radius: 12px; font-weight: 800; font-size: 1rem; cursor: pointer; box-shadow: 0 10px 20px rgba(0,0,0,0.2);">Finalizar compra</button>
    </div>
  </div>
</div>

{{$scripts}}
<script src="/assets/js/products.js"></script>
{{/scripts}}

{{/main}}
{{/layout}}
